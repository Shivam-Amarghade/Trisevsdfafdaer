<% layout('./layout/bolilarplate') -%>

<body>
    <h2>Booking Form</h2>
    <div class="row">
        <div class="col-8 offset-2">
        <form action="/booking" method="GET" novalidate  class="needs-validation" >

        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required  value="<%=userName%>" class="form-control">
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please Enter a Name</div>
        <br><br>

        <label for="age">Age:</label>
        <input type="number" id="age" name="age" required class="form-control">
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please Enter a Age</div>
        <br><br>

        <label for="checkin">Check-in Date:</label>
        <input type="date" id="checkin" name="checkin" value="<%= checkin %>" required class="form-control">
        <br><br>

        <label for="checkout">Check-out Date:</label>
        <input type="date" id="checkout" name="checkout" value="<%= checkout %>" required class="form-control">
        <br><br>

        <label for="guests">Number of Guests:</label>
        <input type="number" id="guests" name="guests" min="1" value="<%= guests %>" required class="form-control">
        <br><br>

        <label for="amount">Total Amount:</label>
        <input type="text" id="amount" name="amount" placeholder="<%= totalamount %>" value="<%=totalamount%>" class="form-control" readonly>
        <br><br>

        <button type="submit" class="btn btn-outline-danger mb-3">Submit</button>
    </form>
</div>
</div>
</body>